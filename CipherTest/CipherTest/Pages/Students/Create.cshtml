@page
@model CipherTest.Pages.Students.CreateModel
@{
    ViewData["Title"] = "Create Student";
}

<h2>Create Student</h2>

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="control-label">Name</label>
        <input name="Name" class="form-control" type="text" />
        <span asp-validation-for="Student.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label  class="control-label">Age</label>
        <input name="Age" class="form-control" />
        <span asp-validation-for="Student.Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label  class="control-label">Image</label>
        <input name="ImagePath" type="file" class="form-control" />
        <span asp-validation-for="Student.ImagePath" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Class</label>
        <input name="Class" class="form-control" />
        <span asp-validation-for="Student.Class" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Roll Number</label>
        <input name="RollNumber" class="form-control" />
        <span asp-validation-for="Student.RollNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    @Model.Student
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
