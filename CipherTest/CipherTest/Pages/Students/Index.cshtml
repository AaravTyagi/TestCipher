@page
@model CipherTest.Pages.Students.IndexModel

<h2>Students</h2>

<form method="get">
    <div>
        <label>Search by Name:</label>
        <input type="text" name="searchString" value="@Model.CurrentFilter" />
        <input type="submit" value="Search" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Roll Number</th>
            <th>Class</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Age</td>
                <td>@student.RollNumber</td>
                <td>@student.Class</td>
                <td>
                    @if (!string.IsNullOrEmpty(student.ImagePath))
                    {
                        <img src="@student.ImagePath" width="50" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
