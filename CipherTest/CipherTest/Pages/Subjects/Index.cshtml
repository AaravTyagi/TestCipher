@page
@model CipherTest.Pages.Subjects.IndexModel

<h2>Subjects and Their Teachers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Class</th>
            <th>Languages</th>
            <th>Teachers</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model.Subjects)
        {
            <tr>
                <td>@subject.Name</td>
                <td>@subject.Class</td>
                <td>
                    @foreach (var lang in subject.SubjectLanguages)
                    {
                        <span>@lang.Language</span>

                        <br />
                    }
                </td>
                <td>
                    @foreach (var teacherSubject in subject.TeacherSubjects)
                    {
                        <span>@teacherSubject.Teacher.Name</span>

                        <br />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>